<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<!-- Search Form -->
<%= search_form_for @q, url: tasks_path, method: :get do |f| %>
  <!-- Keyword Search (title + description) -->
  <div>
    <%= f.label :title_or_description_cont, "Keyword Search" %>
    <%= f.search_field :title_or_description_cont %>
  </div>

  <!-- Deadline Search -->
  <div>
    <%= f.label :deadline_gteq, "Deadline From" %>
    <%= f.date_field :deadline_gteq %>

    <%= f.label :deadline_lteq, "Deadline To" %>
    <%= f.date_field :deadline_lteq %>
  </div>

  <!-- Status Search -->
  <div>
    <%= f.label :status_eq, "Status" %><br>
    <%= f.radio_button :status_eq, "", checked: params.dig(:q, :status_eq).blank? %> Not specified<br>
    <%= f.radio_button :status_eq, "todo", checked: params.dig(:q, :status_eq) == "todo" %> Pending<br>
    <%= f.radio_button :status_eq, "doing", checked: params.dig(:q, :status_eq) == "doing" %> In Progress<br>
    <%= f.radio_button :status_eq, "done", checked: params.dig(:q, :status_eq) == "done" %> Completed<br>
  </div>

  <%= f.submit "Search" %>
<% end %>

<br>

<!-- Task List -->
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th><%= sort_link(@q, :deadline, "Deadline") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.status %></td>
        <td><%= task.deadline.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>